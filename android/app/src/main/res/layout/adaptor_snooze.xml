<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFc8555d"
    android:paddingLeft="50dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:id="@+id/friend_badge"
        android:paddingBottom="0dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="3min"
        android:id="@+id/friend_time"
        android:textColor="#ffc8555d"
        android:background="@drawable/button_invite_background"
        android:layout_marginLeft="5dp"
        android:textSize="8dp"
        android:layout_centerVertical="true"
        android:padding="3dp"
        android:layout_toEndOf="@+id/friend_badge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="jo_duplessis"
        android:id="@+id/friend_username"
        android:textColor="#fff6e3d6"
        android:layout_marginLeft="5dp"
        android:textSize="12dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/friend_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="has just snoozed"
        android:id="@+id/friend_status"
        android:textColor="#FFf6e3d6"
        android:textSize="12dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/friend_username"
        android:layout_marginLeft="5dp" />

</RelativeLayout>