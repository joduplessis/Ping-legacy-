<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFFFF">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/friend_badge"
            android:layout_alignTop="@+id/ping_status"
            android:layout_alignStart="@+id/ping_title"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/friend_name_placeholder"
            android:id="@+id/ping_title"
            android:textColor="#ff8f8d82"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/friend_status_placeholder"
            android:id="@+id/ping_status"
            android:textColor="#FFbbb8ab"
            android:layout_marginRight="0dp"
            android:textSize="12dp"
            android:layout_below="@+id/ping_title"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/friend_badge" />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/button_accept"
        android:background="@drawable/ui_tick_active"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp" />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/button_reject"
        android:background="@drawable/ui_cross"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@+id/button_accept"
        android:layout_toStartOf="@+id/button_accept" />

</RelativeLayout>