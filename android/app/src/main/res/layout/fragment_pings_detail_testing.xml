<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_general">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/popup_opacity_background"
        android:id="@+id/time_selector_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/time_selector_list"
            android:background="@drawable/days_selector_background"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:padding="20dp">

            <TimePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#985562"
                android:id="@+id/timePicker" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/time_update"
                android:background="@drawable/ui_button_yellow"
                android:textColor="#ffffffff"
                android:text="Update"
                android:layout_margin="10dp" />

        </LinearLayout>

    </RelativeLayout>


</FrameLayout>